<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/notePaletteLL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tagPaletteLL"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/colorPaletteIV1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/colorPaletteIV2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/colorPaletteIV3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/colorPaletteIV4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tagPaletteLL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notePaletteLL"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tagPaletteIV1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tagPaletteIV2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tagPaletteIV3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tagPaletteIV4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>