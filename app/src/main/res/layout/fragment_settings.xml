<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    tools:context=".ui.settings.SettingsFragment">


    <TextView
        android:id="@+id/tagColorHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/tag_colors"
        android:textColor="@color/accent_blue"
        android:textStyle="bold"
        android:textSize="18sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tcs_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="70dp"
        app:justifyContent="space_evenly"
        app:layout_constraintTop_toBottomOf="@+id/tagColorHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tcs_1.1"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_1.2"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_1.3"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_1.4"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />



    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tcs_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="70dp"
        app:justifyContent="space_evenly"
        app:layout_constraintTop_toBottomOf="@+id/tcs_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tcs_2.1"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_2.2"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_2.3"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_2.4"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />



    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tcs_3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="70dp"
        app:justifyContent="space_evenly"
        app:layout_constraintTop_toBottomOf="@+id/tcs_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tcs_3.1"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_3.2"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_3.3"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_3.4"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />



    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tcs_4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="70dp"
        app:justifyContent="space_evenly"
        app:layout_constraintTop_toBottomOf="@+id/tcs_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tcs_4.1"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_4.2"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_4.3"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />
        <View
            android:id="@+id/tcs_4.4"
            android:background="@drawable/ic_circle"
            android:layout_width="30dp"
            android:backgroundTint="@color/note_background"
            android:layout_height="30dp" />



    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:layout_height="0dp"
        android:layout_width="2dp"
        app:layout_constraintTop_toTopOf="@+id/tcs_1"
        app:layout_constraintBottom_toBottomOf="@+id/tcs_4"
        app:layout_constraintStart_toStartOf="@+id/tagColorHeader"
        android:layout_marginStart="20dp"
        android:background="@color/accent_blue"
        />

    <TextView
        android:id="@+id/exportHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tcs_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/accent_blue"
        android:drawableStart="@drawable/ic_export"
        android:drawablePadding="10dp"

        android:text="@string/export_data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/importHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exportHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/accent_blue"
        android:drawableStart="@drawable/ic_import"
        android:drawablePadding="10dp"
        android:text="@string/import_data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/importHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_donate"

        android:drawablePadding="10dp"
        android:text="buy me a coffee?"
        android:textColor="@color/accent_blue" />




    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:padding="10dp"
        android:text="@string/reset_all_settings"
        android:textAlignment="center"
        android:textColor="@color/warn"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/deleteProg" />

    <View
        android:id="@+id/deleteProg"
        android:layout_width="0dp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0"
        android:layout_height="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/rounded_all"
        android:backgroundTint="@color/warn"
        app:layout_constraintBottom_toTopOf="@+id/version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:text="@string/version_placeholder"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>